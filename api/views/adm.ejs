  </body>

  <!-- Modal cadastro-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nova promoção</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form method="post" onsubmit="validarCampos(this); return false;" >
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Nome:</label>
            <input type="text" class="form-control" name="nome" id="nome">

            <label for="recipient-titulo" class="col-form-label">Titulo:</label>
            <input type="text" class="form-control" name="titulo" id="titulo">

            <label for="recipient-produto" class="col-form-label">Produto:</label>
            <input type="text" class="form-control" name="produto" id="produto">

            <label for="recipient-subProduto" class="col-form-label">SubProduto:</label>
            <input type="text" class="form-control" name="subproduto" id="subproduto">

            <label for="recipient-valor" class="col-form-label">Valor:</label>
            <input type="text" class="form-control" name="valor" id="valor">
          </div>
                

         </div>
         <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
          <button id="btnSalvar" type="submit" class="btn btn-primary">Gravar</button>
        </div>
        </form>
      </div>
      
    </div>
  </div>
</div>

