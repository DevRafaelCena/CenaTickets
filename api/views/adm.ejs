<script>
  async function validarCampos(){
    let modal = $('#exampleModal')
    let nome = modal.find('#nome').val()
    let titulo = modal.find('#titulo').val()
    let produto = modal.find('#produto').val()
    let subproduto = modal.find('#subproduto').val()
    let valor = modal.find('#valor').val()


    if(nome ==''){
      alert("Preencha o Nome")
      return false
    }
    if(titulo ==''){
      alert("Preencha o Titulo")
      return false
    }
    if(produto ==''){
      alert("Preencha o Produto")
      return false
    }

    let resposta = await fetch(window.location.href + '/novapromocao', {
      method: 'POST',
      headers: {
        'Accept': 'application/json',
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({
       nome,
       titulo,
       produto,
       subproduto,
       valor
      })
    })

    let resultado = await resposta.json()

    if(resposta.status == 200){
      alert("Dados salvo com sucesso!")
      window.location.reload();

    }else{
      alert("Ocorreu um erro tente novamente")
    }

    return false   
    
  }
</script>


