<body>
<!-- Begin page content -->
<main class="flex-shrink-0">
  <div class="container">
    <h1 class="mt-5 titulo">Cadastro de Promoções</h1>
      
    <table class="table table-bordered padding">
      <thead>
        <tr>          
          <th scope="col">Nome</th>
          <th scope="col">Titulo</th>
          <th scope="col">Produto</th>
          <th scope="col">SubProduto</th>
          <th scope="col">Valor</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% lista.forEach(lista => {  %>
    
          <tr value="<%= lista.id %>">
         
          <td><%= lista.nome %></td>
          <td><%= lista.titulo %></td>
          <td><%= lista.produto %> </td>
          <td><%= lista.subproduto  %></td>
          <td><%= lista.valor  %></td>
          <td><button class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal2" data-id="<%= lista.id %>"
            data-nome="<%= lista.nome %>" data-titulo="<%= lista.titulo %>" data-produto="<%= lista.produto %>"
            data-subproduto="<%= lista.subproduto %>" data-valor="<%= lista.valor%>" >Editar</button>
            <button class="btn btn-danger" data-toggle="modal" data-target="#staticDeletar" data-id="<%= lista.id %>"  data-nome="<%= lista.nome %>"   >Apagar</button> </td>
        </tr>
        <% }); %>
       
      </tbody>
    </table>

    <% if(lista.length >= 3){ %>
      <p>Limete de promoções atingido para cadastrar mais realizar a exlusão de algum</p>

      <%} else{  %> 
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Novo</button>
    <% }  %>

    
  </div>
</main>

<footer class="footer mt-auto py-3 bg-light">
  <div class="container">
    <span class="text-muted">Desenvolvido por Cena Tecnologia </span>
  </div>
</footer>
